# Environment Configuration Example
# Copy this file to .env and update values

# ===== SECRETS (never commit) =====
PRIVATE_KEY=
FORK_RPC_URL=
FLASHBOTS_KEY=

# ===== RPC CONFIGURATION =====
PRIMARY_RPC_HTTP=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY
FALLBACK_RPC_HTTP=https://rpc.ankr.com/eth
WS_RPC_URL=

# ===== RUNTIME FLAGS =====
DRY_RUN=true
ENABLE_MEMPOOL=false
ENABLE_FLASHBOTS=false
NETWORK=mainnet

# ===== SAFETY CAPS =====
# Hard runtime guards for live mode
MIN_PROFIT_USD=25
MAX_DAILY_GAS_USD=50
TRADE_CAP=0 # number of trades per day (0 = unlimited, respect other caps)

# ===== OBSERVABILITY =====
LOG_LEVEL=info
LOG_PRETTY=false
HEALTHCHECK_PORT=9090

# ===== FORK TESTING (optional) =====
# Fork tests are optional and do not block CI
# FORK_BLOCK_NUMBER=19350000
# FORK_TEST_MIN_WETH=0.005
# FORK_TEST_MIN_USDC=500000
# FORK_PROBE_BUDGET_MS=25000
# FORK_STRICT=false
# FORK_TEST_VERBOSE=false