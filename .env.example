# Environment Configuration Example
# Copy this file to .env and update values

# ===== SECRETS (never commit) =====
PRIVATE_KEY=
FLASHBOTS_SIGNER_KEY=
FORK_RPC_URL=
FLASHBOTS_RELAY_URL=https://relay.flashbots.net

# ===== RPC CONFIGURATION =====
PRIMARY_RPC_HTTP=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY
# Alternatively, comma-separated list (first is used by the runner):
# RPC_PROVIDERS=https://rpc1,https://rpc2

# ===== RUNTIME FLAGS =====
DRY_RUN=true
ENABLE_MEMPOOL=false
ENABLE_FLASHBOTS=false
NETWORK=mainnet

# ===== EXECUTION (flashloan path) =====
# Deployed Balancer contracts required for live execution
BALANCER_VAULT_ADDRESS=0xBA12222222228d8Ba445958a75a0704d566BF2C8
RECEIVER_ADDRESS=                 # your deployed BalancerFlashJitReceiver
# Borrow set (addresses, comma-separated) and amounts (uint256 as decimal strings)
EXEC_TOKENS=
EXEC_AMOUNTS=
# Safer default â€” scales amounts down by 10x automatically
EXECUTION_SAFE_MODE=true
# Run one execution at startup (optional)
AUTO_EXECUTE_ON_START=false

# ===== MEMPOOL (basic watcher) =====
MEMPOOL_MIN_VALUE_ETH=50

# ===== SAFETY CAPS =====
MIN_PROFIT_USD=25
MAX_DAILY_GAS_USD=50
TRADE_CAP=0

# ===== OBSERVABILITY =====
LOG_LEVEL=info
LOG_PRETTY=false
HEALTHCHECK_PORT=9090

# ===== FORK TESTING (optional) =====
# Fork tests are optional and do not block CI
# FORK_BLOCK_NUMBER=19350000
# FORK_TEST_MIN_WETH=0.005
# FORK_TEST_MIN_USDC=500000
# FORK_PROBE_BUDGET_MS=25000
# FORK_STRICT=false
# FORK_TEST_VERBOSE=false