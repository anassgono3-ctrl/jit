{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Backtest Results",
  "type": "object",
  "required": [
    "results",
    "successRate",
    "medianProfitUsd",
    "worstProfitUsd",
    "totalPlans",
    "acceptedPlans",
    "rejectionStats",
    "summary",
    "distribution",
    "timestamp"
  ],
  "properties": {
    "results": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["fixtureName", "planned", "simulated", "actualProfitUsd", "validation", "executionTimeMs"],
        "properties": {
          "fixtureName": { "type": "string" },
          "planned": { "type": "boolean" },
          "plan": { "type": ["object", "null"] },
          "simulated": { "type": "boolean" },
          "simulationResult": {},
          "actualProfitUsd": { "type": "string" },
          "validation": {
            "type": "object",
            "required": ["passed", "errors"],
            "properties": {
              "passed": { "type": "boolean" },
              "errors": { "type": "array", "items": { "type": "string" } }
            }
          },
          "executionTimeMs": { "type": "number", "minimum": 0 }
        }
      }
    },
    "successRate": { "type": "number", "minimum": 0, "maximum": 1 },
    "medianProfitUsd": { "type": "number" },
    "worstProfitUsd": { "type": "number" },
    "totalPlans": { "type": "integer", "minimum": 0 },
    "acceptedPlans": { "type": "integer", "minimum": 0 },
    "rejectionStats": {
      "type": "object",
      "required": [
        "profitBelowThreshold",
        "minSwapUsdNotMet",
        "liquidityNotViable",
        "gasTooHigh",
        "inclusionProbTooLow"
      ],
      "properties": {
        "profitBelowThreshold": { "type": "integer", "minimum": 0 },
        "minSwapUsdNotMet": { "type": "integer", "minimum": 0 },
        "liquidityNotViable": { "type": "integer", "minimum": 0 },
        "gasTooHigh": { "type": "integer", "minimum": 0 },
        "inclusionProbTooLow": { "type": "integer", "minimum": 0 }
      }
    },
    "summary": {
      "type": "object",
      "required": [
        "totalFixtures",
        "successfulPlans",
        "profitableExecutions",
        "totalProfitUsd",
        "averageProfitUsd",
        "successRate",
        "averageExecutionTimeMs"
      ],
      "properties": {
        "totalFixtures": { "type": "integer", "minimum": 0 },
        "successfulPlans": { "type": "integer", "minimum": 0 },
        "profitableExecutions": { "type": "integer", "minimum": 0 },
        "totalProfitUsd": { "type": "string" },
        "averageProfitUsd": { "type": "string" },
        "successRate": { "type": "number", "minimum": 0, "maximum": 1 },
        "averageExecutionTimeMs": { "type": "number", "minimum": 0 }
      }
    },
    "distribution": {
      "type": "object",
      "required": ["profitBuckets", "executionTimeBuckets"],
      "properties": {
        "profitBuckets": {
          "type": "object",
          "additionalProperties": { "type": "integer", "minimum": 0 }
        },
        "executionTimeBuckets": {
          "type": "object",
          "additionalProperties": { "type": "integer", "minimum": 0 }
        }
      }
    },
    "timestamp": { "type": "integer", "minimum": 0 }
  }
}